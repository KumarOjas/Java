
class Test
{
public static void main (String args[])
{
    int i=50;
    //automatic type conversion
    long l=i;
    //automatic type conversion
    float f=l;
    System.out.println("Int value="+i);
    System.out.println("Long value="+l);
    System.out.println("Float value="+f);
    //Java program to illustrate incompatible data  
// type for explicit type conversion 
 class Test1
{ 
  public static void main (String args[]) 
  { 
    char ch = 'c'; 
    int num = 88; 
    ch = num; //This will show error due to incompatible data type
  } 
} 
}
}
class Test2
{ 
    public static void main(String args[])
    
    {   double d=100.04;
        //explicit type casting
        long l=(long)d;
        //explicit type casting
        int i=(int)l;
        System.out.println("Double value="+d);
        System.out.println("Long value="+l);
        System.out.println("Int value="+i);
    }
}
    //Java program to illustrate conversion of int and double to byte    
    
    class Test3
    {
        public static void main(String args[])
        
     {
    byte b;
    int i=257;
    double d=323.142;
    System.out.println("conversion of int to byte");
    b=(byte)i;
    System.out.println("i="+i +"b="+b);
    System.out.println("\n Conversion of double to byte.");
    b=(byte) d;
    System.out.println("d="+d+"b="+b);
    }
    }
    // java program to illustrate Type promotion in expression
    class Test4
    { 
        public static void main(String args[])
    {
        byte b=42;
        char c='a';
        short s=1024;
        int i=50000;
        float f=5.67f;
        double d=.1234;
        //The expression
        double result=(f*b)+(i/c)-(d*s);
        //results after all the promotions are done
        System.out.println("result="+result);
    }
    }
    //Java program to illustrate type casting into byte
    class Test5
    {
        public static void main (String args[])
        {
            byte b=50;
            //typecasting into byte
            b=(byte)(b*2);
            System.out.println(b);
        }
    }
    
    
    //Java program to illustrate type casting to byte
    class Test6
    {public static void main(String args[])
        {
            byte b=50;
            //typecasting into byte
            b=(byte)(b*2);
            System.out.println(b);
        }
    }
    
    
    
    
    
    
    
