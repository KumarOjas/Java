class circle
{
    public static void main(String [] args)
{
    int r=10;
    double area,circ;
    area=3.14*r*r;
    circ=2*3.14*r;
    System.out.println("Area is "+area);
    System.out.println("Circumference is"+circ);
}
}
//altaernate method
class circle1
//by using math class
{ public static void main(String[] args)
    {
        int r=10;
        double area,circ;
        area=Math.PI*Math.pow(r,2);
        circ=2*Math.PI*r;
        System.out.println("Area is"+area);
        System.out.println("Circumference is"+circ); 
    }
